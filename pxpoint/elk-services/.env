# PXPoint ELK Services Configuration
# Optimized for hierarchical correlation tracking (Pipeline -> Process -> Activity)

# Application Configuration
APPLICATION_NAME=pxpoint
ENVIRONMENT=development

# Log Configuration
LOG_FORMAT=json
LOG_TYPE=application
LOG_SOURCE_PATH=/tmp/pxpoint-logs

# Index Configuration
INDEX_PREFIX=pxp-logs
INDEX_DATE_PATTERN=YYYY.MM.dd

# Correlation Configuration (cpp/log-services compatibility)
PIPELINE_ID_PREFIX=pipeline
PROCESS_ID_PREFIX=proc  
ACTIVITY_ID_PREFIX=act

# Custom Grok Patterns for cpp/log-services format
# These patterns extract correlation IDs from message fields as backup
CORRELATION_ID_PATTERN=
THREAD_PATTERN=
CUSTOM_GROK_PATTERN=

# Port Configuration
ELASTICSEARCH_PORT=9200
LOGSTASH_BEATS_PORT=5044
KIBANA_PORT=5601

# Memory Configuration (adjust based on system resources)
ELASTICSEARCH_HEAP_SIZE=1g
LOGSTASH_HEAP_SIZE=512m

# Filebeat Configuration
FIELDS_UNDER_ROOT=false
SCAN_FREQUENCY=5s
FILEBEAT_BUFFER_SIZE=16384
FILEBEAT_MAX_BYTES=10485760
JSON_KEYS_UNDER_ROOT=true

# Debug Output (set to true for troubleshooting)
DEBUG_OUTPUT=false

# Additional tags for filtering
LOG_TAGS=pxpoint,cpp-log-services,correlation