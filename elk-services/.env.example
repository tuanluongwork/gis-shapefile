# ELK Services Configuration
# Copy this file to .env and customize for your application

# Application Configuration
APPLICATION_NAME=myapp
LOG_SOURCE_PATH=/var/log/myapp
LOG_TYPE=application

# Index Configuration
INDEX_PREFIX=app-logs
INDEX_DATE_PATTERN=YYYY.MM.dd

# Log Format Settings (json or text)
LOG_FORMAT=json
JSON_KEYS_UNDER_ROOT=true
FIELDS_UNDER_ROOT=false
SCAN_FREQUENCY=10s

# Performance Settings
FILEBEAT_BUFFER_SIZE=16384
FILEBEAT_MAX_BYTES=10485760
LOGSTASH_HEAP_SIZE=256m
ELASTICSEARCH_HEAP_SIZE=512m

# Network Settings
ELASTICSEARCH_PORT=9200
LOGSTASH_BEATS_PORT=5044
KIBANA_PORT=5601

# Environment
ENVIRONMENT=development
DEBUG_OUTPUT=false

# Custom patterns (for text logs)
# CORRELATION_ID_PATTERN="correlation_id:\\s*(?<correlation_id>[^\\s]+)"
# THREAD_PATTERN="\\[(?<thread_id>Thread-\\d+)\\]"
# CUSTOM_GROK_PATTERN="%{TIMESTAMP_ISO8601:timestamp} %{LOGLEVEL:level} %{GREEDYDATA:message}"