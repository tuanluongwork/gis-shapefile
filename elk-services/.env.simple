# Simple ELK Configuration for Basic Applications
# Copy this file to .env for a simple setup

# Application Configuration
APPLICATION_NAME=simple-app
LOG_SOURCE_PATH=./sample-logs
LOG_TYPE=application

# Index Configuration
INDEX_PREFIX=app-logs
INDEX_DATE_PATTERN=YYYY.MM.dd

# Log Format (json or text)
LOG_FORMAT=text
JSON_KEYS_UNDER_ROOT=false
FIELDS_UNDER_ROOT=false
SCAN_FREQUENCY=30s

# Performance Settings (lighter resources)
FILEBEAT_BUFFER_SIZE=8192
FILEBEAT_MAX_BYTES=5242880
LOGSTASH_HEAP_SIZE=256m
ELASTICSEARCH_HEAP_SIZE=512m

# Network Settings
ELASTICSEARCH_PORT=9200
LOGSTASH_BEATS_PORT=5044
KIBANA_PORT=5601

# Environment
ENVIRONMENT=development
DEBUG_OUTPUT=true

# Simple text log pattern
CUSTOM_GROK_PATTERN="%{TIMESTAMP_ISO8601:timestamp} %{LOGLEVEL:level} %{GREEDYDATA:message}"