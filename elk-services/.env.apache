# Apache Log Analysis Configuration
# Copy this file to .env for analyzing Apache access logs

# Application Configuration
APPLICATION_NAME=web-server
LOG_SOURCE_PATH=./apache-logs
LOG_TYPE=web_access

# Index Configuration
INDEX_PREFIX=apache-logs
INDEX_DATE_PATTERN=YYYY.MM.dd

# Log Format Settings (Apache logs are plain text)
LOG_FORMAT=text
JSON_KEYS_UNDER_ROOT=false
FIELDS_UNDER_ROOT=false
SCAN_FREQUENCY=10s

# Performance Settings
FILEBEAT_BUFFER_SIZE=32768
FILEBEAT_MAX_BYTES=20971520
LOGSTASH_HEAP_SIZE=1g
ELASTICSEARCH_HEAP_SIZE=2g

# Network Settings
ELASTICSEARCH_PORT=9200
LOGSTASH_BEATS_PORT=5044
KIBANA_PORT=5601

# Environment
ENVIRONMENT=production
DEBUG_OUTPUT=false

# Apache Common Log Format pattern
CUSTOM_GROK_PATTERN="%{COMMONAPACHELOG}"